{
   "app-id":"de.haeckerfelix.gradio",
   "runtime":"org.gnome.Platform",
   "runtime-version":"3.24",
   "sdk":"org.gnome.Sdk",
   "command":"gradio",
   "finish-args":[
      "--share=ipc",
      "--share=network",
      "--socket=x11",
      "--socket=wayland",
      "--socket=pulseaudio",
      "--device=dri",
      "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
      "--filesystem=xdg-run/dconf",
      "--filesystem=host",
      "--filesystem=~/.config/dconf:ro",
      "--talk-name=ca.desrt.dconf",
      "--own-name=org.mpris.MediaPlayer2.gradio"
   ],
   "modules":[
      {
         "name":"gst-libav",
         "config-opts":[
            "--disable-gtk-doc",
            "--with-system-libav"
         ],
         "cleanup":[
            "*.la",
            "/share/gtk-doc"
         ],
         "sources":[
            {
               "type":"archive",
               "url":"https://gstreamer.freedesktop.org/src/gst-libav/gst-libav-1.10.4.tar.xz",
               "sha256":"6ca0feca75e3d48315e07f20ec37cf6260ed1e9dde58df355febd5016246268b"
            }
         ],
         "modules":[
            "org.ffmpeg.FFmpeg.json"
         ]
      },
      {
         "name":"gradio",
         "buildsystem":"meson",
         "builddir":true,
         "sources":[
            {
               "type":"archive",
               "url":"https://github.com/haecker-felix/gradio/archive/v6.0.2.tar.gz",
               "sha256":"941b8abea901699f3110894ada34c74a51df518c6b83ea6cd237ffcac18e2092"
            }
         ]
      }
   ]
}
